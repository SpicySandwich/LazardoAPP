package com.client.LazardoClient.Validation;

import com.client.LazardoClient.ModelException.NotNullException;

public class ClientInputValidation {
	
	public String checkEmailFormat(String email) {
		if(email.isEmpty()) throw new NotNullException("Email is empty");
		if(!email.matches("^(.+)@(.+)$")) throw new NotNullException("Email format is invalid");
		return email;
	}
	
	public String checkUsernameNotNull(String username) {
		if(username.isEmpty()) throw new NotNullException("Email is empty");
		return username;
	}
	
	public String checkPasswordFormat(String password) {
		if(password.isEmpty()) throw new NotNullException("Email is empty");
		return password;
	}

}
