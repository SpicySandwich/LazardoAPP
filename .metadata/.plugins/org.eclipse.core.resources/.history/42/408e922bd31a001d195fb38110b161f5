package com.client.LazardoClient.DAO;

import org.apache.ibatis.annotations.Mapper;
import org.apache.ibatis.annotations.Update;

@Mapper
public interface ClientBalance {
	
	final String ADD_BALANCE = "UPDATE tbclientdetails  cd\r\n"
			+ "JOIN (\r\n"
			+ "SELECT cd2.money_balance AS currentbalance, cd2.client_email AS clientemail\r\n"
			+ "FROM tbclientdetails cd2\r\n"
			+ "WHERE cd2.client_email = 'conred@gmail.com'\r\n"
			+ ") balance\r\n"
			+ "SET cd.money_balance = balance.currentbalance + 1000\r\n"
			+ "WHERE cd.client_email = balance.clientemail;";
	
	@Update(ADD_BALANCE)
	Integer addBalance(Integer balance);

}
