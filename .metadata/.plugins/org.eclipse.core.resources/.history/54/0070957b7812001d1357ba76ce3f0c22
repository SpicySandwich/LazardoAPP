package com.client.LazardoClient.Model;



import java.util.List;

import com.fasterxml.jackson.annotation.JsonProperty;
import com.fasterxml.jackson.annotation.JsonProperty.Access;

import lombok.AccessLevel;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;



@AllArgsConstructor(access = AccessLevel.PRIVATE)
@NoArgsConstructor
@Data
@Builder
public class ClientDetails {
	
	private Integer detailId;
	
	@JsonProperty(access = Access.WRITE_ONLY)
	private String loginUsername;
	
	private String firstname;
	private String lastname;
	private String email;
	private Double balance;
	private List<ClientPurchase>  clientPurchases;
	private Price productTotalPrice;
	
	
	public static ClientDetails builderTest(String loginUsername, String firstname, String  lastname, String email,Double balance) {
		
		return new ClientDetails().builder().loginUsername(loginUsername).firstname(firstname).lastname(lastname).email(email).balance(balance).build();

	}
	
	
	
	

}
