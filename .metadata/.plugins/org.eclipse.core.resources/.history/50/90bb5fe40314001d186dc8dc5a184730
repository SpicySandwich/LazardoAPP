package com.client.LazardoClient.DAO;


import java.util.List;

import com.client.LazardoClient.Model.CartProduct;

import org.apache.ibatis.annotations.Insert;
import org.apache.ibatis.annotations.Mapper;
import org.apache.ibatis.annotations.Param;

@Mapper
public interface BuyProductRepo {
	
	final String CART_PRODUCT = "INSERT INTO  tbpurchasedetails (client_purchase_id, client_product_purchase_id) "
			                                  + "VALUES ((SELECT client_id FROM tbclientdetails WHERE client_email = #{clientEmail}), #{cartProductID});";
	
	
	
	  @Insert({
	        "<script>",
	        "INSERT tbpurchasedetails",
	            "(client_purchase_id, client_product_purchase_id)",
	        "VALUES" +  
	            "<foreach item='each_item_name' collection='cartProduct' open='' separator=',' close=''>" +
	                "((" +
	                    "SELECT client_id FROM tbclientdetails WHERE client_email = #{each_item_name.clientEmail}), ",
	                    "#{each_item_name.cartProductID},"+
	                ")" +
	            "</foreach>",
	    "</script>"})

	public Integer addProductTOClient(@Param("cartProduct") List<CartProduct>   cartProduct);
	
	

}
