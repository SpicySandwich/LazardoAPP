package com.client.LazardoClient.Model;



import java.util.List;

import com.fasterxml.jackson.annotation.JsonProperty;
import com.fasterxml.jackson.annotation.JsonProperty.Access;

import lombok.AccessLevel;
import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Data;
import lombok.NoArgsConstructor;



@AllArgsConstructor(access = AccessLevel.PRIVATE)
@NoArgsConstructor
@Data
@Builder(builderMethodName="builderTest")
public class ClientDetails {
	
	private Integer detailId;
	
	@JsonProperty(access = Access.WRITE_ONLY)
	private String loginUsername;
	
	private String firstname;
	private String lastname;
	private String email;
	private Double balance;
	private List<ClientPurchase>  clientPurchases;
	private Price productTotalPrice;
	
	
//	public static ClientDetails builderTest(Price productTotalPrice) {
//		
//		return new ClientDetails().loginUsername(productTotalPrice(productTotalPrice));
//
//	}


	public ClientDetails(String loginUsername, String firstname, String lastname, String email, Double balance,
			List<ClientPurchase> clientPurchases, Price productTotalPrice) {
		super();
		this.loginUsername = loginUsername;
		this.firstname = firstname;
		this.lastname = lastname;
		this.email = email;
		this.balance = balance;
		this.clientPurchases = clientPurchases;
		this.productTotalPrice = productTotalPrice;
	}
	
	
	
	
	
	

}
